# Production environment variables
# Copy this to .env and fill in your values

# Azure AD Configuration (Required)
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here

# Database Configuration (Optional - defaults to sqlite:///./links.db)
DATABASE_URL=sqlite:///data/links.db

# Application Configuration (Optional - customize for your domain)
BASE_URL=https://links.miskakyto.fi
ALLOWED_ORIGINS=https://links.miskakyto.fi

# Optional: For PostgreSQL instead of SQLite
# DATABASE_URL=postgresql://username:password@postgres:5432/linkshortener

# Logging (Optional)
LOG_LEVEL=INFO
