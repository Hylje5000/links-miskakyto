{
  "name": "linkshortener",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:test": "NEXT_PUBLIC_TEST_MODE=true next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "cd backend && python -m pytest",
    "test:backend-coverage": "cd backend && python -m pytest --cov=. --cov-report=html",
    "test:all": "npm run test && npm run test:backend",
    "backend": "python backend/main.py",
    "backend:test": "TEST_MODE=true python backend/main.py",
    "dev:full": "concurrently \"npm run dev\" \"npm run backend\"",
    "dev:test-full": "concurrently \"npm run dev:test\" \"npm run backend:test\"",
    "setup": "./setup-dev.sh"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.13.2",
    "@azure/msal-react": "^3.0.13",
    "@headlessui/react": "^2.2.4",
    "@tanstack/react-query": "^5.81.2",
    "@tailwindcss/postcss": "^4",
    "axios": "^1.10.0",
    "lucide-react": "^0.524.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "typescript": "^5"
  }
}
